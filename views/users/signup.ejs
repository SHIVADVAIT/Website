<% layout("/layouts/boilerplate") -%>
<div class="row mt-3">

    <div class="col-6 offset-3s">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">  <lable for="username" class="form-label">Username</lable>
            <input name="username"  id="username"  placeholder="enter username" type="text" class="form-control" required />
          <div class="valid-feedback">Title looks good</div>
          </div>
          <div class="mb-3">  <lable for="email" class="form-label">Email</lable>
            <input name="email"  id="email"  placeholder="enter emailID" type="email" class="form-control" required />
          <div class="valid-feedback">Title looks good</div>
          </div>
          <div class="mb-3">  <lable for="password" class="form-label">Password</lable>
            <input name="password"  id="password"  placeholder="enter password" type="password" class="form-control" required />
          <div class="valid-feedback">Title looks good</div>
          </div>

    <button class="btn btn-success">SignUP</button>
    </form>
    </div>
    
</div>